{
  "name": "vscode-ghost-extension",
  "displayName": "vscode-ghost-extension",
  "description": "post markdown files to your ghost blog directly from vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-ghost-extension.createPost",
    "onCommand:vscode-ghost-extension.updatePost"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Ghost",
      "properties": {
        "ghost.apiUrl": {
          "type": "string"
        },
        "ghost.adminApiKey": {
          "type": "string"
        },
        "ghost.apiVersion": {
          "type": "string",
          "default": "v3"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-ghost-extension.createPost",
        "title": "Ghost: Create New Post"
      },
      {
        "command": "vscode-ghost-extension.updatePost",
        "title": "Ghost: Update Existing Post"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@tryghost/admin-api": "^1.2.0",
    "showdown": "^1.9.1"
  }
}
